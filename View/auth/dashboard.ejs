<%-include('../includes/header.ejs')%>
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/navbar.ejs')%>
    <main>
        <h1 class="mt-5 mb-4 text-center text-success fw-bold">Blog Dashboard</h1>
        <div class="d-flex">
            <p class="text-danger"><%=errorUser%></p>
        </div>
        <div class="d-flex">
            <p class="text-danger"><%=errorView%></p>
        </div>
        <div class="d-flex justify-content-center">
            <input type="hidden" name="email" id="email" value="<%=data.email%>" readonly>
        </div>
        <div class="d-flex justify-content-center">
            <div class="mt-5">
                <a href="/blog/create/<%=data.email%>" class="btn btn-lg btn-success mx-2">Create Blog</a>
                <a href="/blog/viewdata/<%=data.email%>" class="btn btn-lg btn-warning text-success mx-2">View Blog</a>
                <a href="/blog/logout" class="btn btn-lg btn-danger mx-2">Sign Out</a>
            </div>
        </div>
    </main>