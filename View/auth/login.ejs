<%-include('../includes/header.ejs')%>
<title>
<%=title%>
</title>
</head>
<body>
    <%-include('../includes/navbar.ejs')%>
    <main>
        <h1 class="mt-5 mb-4 text-center text-success">Blog Login</h1>
        <form class="mt-5 mb-5" action="/auth/postlogin" method="POST" autocomplete="off">
            <div class="mt-3 mb-3 mx-3">
                <p class="text-danger"><%=verifySuccess%></p>
            </div>
            <div class="mt-3 mb-3 mx-3">
                <p class="text-danger"><%=mailError%></p>
            </div>
            <div class="mt-3 mb-3 mx-3">
                <p class="text-danger"><%=errorPass%></p>
            </div>
            <div class="mt-3 mb-3 mx-3">
              <p class="text-danger"><%=errorLog%></p>
            </div>
            <div class="mt-3 mb-3 mx-3">
              <p class="text-danger"><%=errorDash%></p>
            </div>
            <div class="mb-3 mx-3">
              <label for="email" class="form-label">Email Id</label>
              <input type="email" class="form-control" name="email" id="email">
            </div>
            <div class="mb-3 mx-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" id="password">
            </div>
            <button type="submit" class="btn btn-primary mx-3">Login</button>
          </form>
    </main>
<%-include('../includes/footer.ejs')%>
